{
  "trailingComma": "es5",
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "printWidth": 100,
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "parser": "typescript",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false,
        "tabWidth": 2,
        "useTabs": false,
        "parser": "json-stringify"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "htmlWhitespaceSensitivity": "ignore",
        "printWidth": 150
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss"
      }
    }
  ]
}
